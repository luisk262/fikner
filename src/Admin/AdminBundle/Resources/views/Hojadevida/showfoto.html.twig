{% extends "AdminAdminBundle::layout.html.twig" %}
{% block container %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Foto</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Hoja de vida
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover">
                        <tbody>
                            <tr>
                                

                                    {% if foto == '' %}
                                        <img u=image height="210" width="210" src="{{ asset('upload/default/default.jpg')}}" />
                                    {% else %}
                                             <img u=image height="auto" width="100%" src="{{asset('upload/Hojasdevida/' ~ id ~'/' ~ foto)}}" />
                                    {%endif%}
                               
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                </div>
            </div>
        </div>
    </div>

{% endblock %}

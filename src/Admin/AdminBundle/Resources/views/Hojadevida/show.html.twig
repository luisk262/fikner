{% extends "AdminAdminBundle::layout.html.twig" %}
{% block title %}
    Proyecto | {{ parent() }}
{% endblock %}
{% block container %}
    <h3><span class="glyphicon glyphicon-user"></span> {{entity.nombre}}  {{entity.apellido}}</h3>
    <h3> Edad:                  {% set number1 = entity.fechaNac|date("Y") %}
        {% set number2 = "now"|date("Y") %}
        {% set aux= ((number2 - number1)) %}
        {{aux}}
        Id:<a href="{{path('list_book', { 'id':entity.id})}}">BOOK:{{entity.id}}</a>
    </h3>
    <div class="col-lg-12">
        {{ render(controller('AdminAdminBundle:Photo:list',{'id':entity.id})) }}
    </div>
    <div class="col-md-10">
        <div class="form-group">
        </div>
        <hr>
        <div class="form-group">
            <div class="col-md-6">                
                <label>Tipo de Documento</label>
                {{ entity.tipoDocumento }}
            </div>
            <div class="col-md-6">                
                <label>Documento</label>
                {{ entity.nit }}

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <label>Nombres</label>
                {{entity.nombre}}  
            </div>
            <div class="col-md-6">
                <label>Apellidos</label>
                {{entity.apellido}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <label>Whatsapp</label>
                {{ entity.telefonoAdic }}

            </div>
            <div class="col-md-6">
                <label>Telefono celular</label>
                {{ entity.telCe }}
            </div>
        </div>
        <div class="form-group">                
            <div class="col-md-6">
                <label>Correo Electronico</label>
                {{ entity.emailPersonal }}
            </div>
        </div>

        <hr>
        <div class="form-group">
            <div class="col-md-12">
                <label>Fecha de nacimiento</label>
                {{ entity.fechaNac|date('Y-m-d') }}
            </div>
        </div>
        <hr>
        <div class="form-group">
            <div class="col-md-4">
                <label>Genero</label>
                {{ entity.sexo }}

            </div>
            <div class="col-md-4">
                <label>Estatura</label>
                {{ entity.estatura}}
            </div>
            <div class="col-md-4">
                <label>Peso</label>
                {{ entity.peso}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Direccion de casa</label>
                {{ entity.dirCasa}}
            </div>
            <div class="col-md-4">
                <label>Ciudad de recidencia</label>
                {{ entity.ciudadresidencia}}
            </div>
            <div class="col-md-4">
                <label>Lugar de nacimiento</label>
                {{ entity.paisnacimiento }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Deportes</label>
                {{ entity.deportes }}
            </div>
            <div class="col-md-4">
                <label>Maneja</label>
                {{ entity.maneja }}
            </div>
            <div class="col-md-4">
                <label>Idiomas</label>
                {{ entity.idiomas}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Habilidades</label>
                {{ entity.habilidades }}
            </div>
            <div class="col-md-4">
                <label>Entidad de salud</label>
                {{ entity.entidadSalud }}
            </div>

        </div>
        <hr>
        <div class="form-group">
            <div class="col-md-4">
                <label>Color de piel</label>
                {{ entity.piel }}
            </div>
            <div class="col-md-4">
                <label>Color ojos</label>
                {{ entity.ojos }}
            </div>
            <div class="col-md-4">
                <label>Color de Cabello</label>
                {{ entity.pelo }}
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-4">

                <label>Talla de camisa</label>
                {{ entity.tallaCamisa }}
            </div>
            <div class="col-md-4">
                <label>Talla de chaqueta</label>
                {{ entity.tallaChaqueta }}
            </div>
            <div class="col-md-4">
                <label>Talla Pantalon</label>
                {{ entity.tallaPantalon }}                </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Talla Zapato</label>
                {{ entity.TallaZapato }}
            </div>                
        </div>
        <hr>
        <div class="form-group">
            <div class="col-md-12">

                <label>Experencia de television</label>
                {{ entity.experienciaTv }}
            </div>                
        </div>
        <div class="form-group">
            <div class="col-md-12">

                <label>Fecha Creacion</label>
                {{ entity.fecha|date('Y-m-d H:i:s') }}
            </div>                
        </div>
        <div class="form-group">
            <div class="col-md-12">

                <label>Fecha Actualizacion</label>
                {{ entity.fechaupdate|date('Y-m-d H:i:s') }}
            </div>                
        </div>
    </div>    
    <div class="col-md-2">
        <ul class="record_actions">
            <a href="{{ path('Admin_photo_new',{'id':entity.id}) }}" class="btn btn-default btn-block ">
                <i class="glyphicon glyphicon-upload"></i> Subir Foto
            </a>          
            <a  class='btn btn-primary btn-block' href="{{ path('dashboard_hojadevida') }}">

                Ver lista
            </a>
            <a  class='btn btn-info btn-block' href="{{ path('dashboard_hojadevida_edit', { 'id': entity.id}) }}">
                Editar
            </a>
            <a class="btn btn-info btn-block" id="btnPrint"><span class="glyphicon glyphicon-print"></span> Imprimir</a>
            <hr>
        </ul>
    </div>
{% endblock %}
{% block javasctipt %}
    <!-- jQuery -->
    <script src="{{asset('bundles/adminadmin/bower_components/jquery/dist/jquery.min.js')}}"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="{{asset('bundles/adminadmin/bower_components/bootstrap/dist/js/bootstrap.min.js')}}"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="{{asset('bundles/adminadmin/bower_components/metisMenu/dist/metisMenu.min.js')}}"></script>


    <!-- DataTables JavaScript -->
    <script src="{{asset('bundles/adminadmin/dist/js/sb-admin-2.js')}}"></script>
    <script>
        (function ($) {
            /* print button */
            $('#btnPrint').on('click', function () {
                $('#mycontainer').removeClass('hidden-print');

                window.print();
            });
        })(jQuery);
    </script>
{%endblock%}
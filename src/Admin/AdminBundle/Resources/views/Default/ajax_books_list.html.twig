<div class="col-md-12">
    {% include "AdminAdminBundle:Default:paginacion.html.twig" %}
</div>
{% for entity in entities %}
    <div class="col-sm-6 col-md-3 col-lg-2">
        <a href="{{path('list_book', {'id':entity.idHojadevida.id})}}">
            {% if entity.idPhoto.image == '' %}
                    <img data-src="{{ asset('upload/default/default.jpg')}}"  src="{{ asset('upload/default/default.jpg')}}"> 
            {% else %}
                    <img data-src="{{web_image('upload/Photos/' ~ entity.idPhoto.id ~'/' ~ entity.idPhoto.image).resize(100,100)}}"  src="{{web_image('upload/Photos/' ~ entity.idPhoto.id ~'/' ~ entity.idPhoto.image).resize(200,200)}}" style="height: 180px; width: 100%; display: block;"> 
            {%endif%}
        </a>
    </div>
{% endfor %}

<div class="col-md-12">
    {% include "AdminAdminBundle:Default:paginacion.html.twig" %}
</div>
<script>
    (function ($) {
        /* tooltip */
        $('a[data-toggle="tooltip"]').tooltip();

    })(jQuery);
</script>






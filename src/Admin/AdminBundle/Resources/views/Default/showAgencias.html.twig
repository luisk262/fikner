	{% extends "AdminAdminBundle:Default:layout.html.twig" %}
{% block title %}Agencias Fikner{% endblock %}
{% block facebook %}
	<meta property="og:url"                content="http://www.fikner.com/" />
	<meta property="og:type"               content="article" />
	<meta property="og:title"              content="Directorio Agencias" />
	<meta property="og:image"              content="{{web_image('images/background/Fb2.png')}}" />
	<meta property="og:image:width" content="400">
	<meta property="og:image:height" content="315">
	<meta name="og:description" content="Apuntate como agencia!. Registrar su perfil es completamente GRATIS!.">
	<meta name="keywords" content="fikner,Trabaja,Tabajo,extra,figurante,modelo,actor,bogota,colombia,evento,publicidad,actriz,Cantante,Locutor,Actuacion,cine,
              Novela,camara,Casting,Imagen,Television,Talento,Estilo,arte,caracol,rti,rcn,canal,teleantioquia,señal,cable,centro,institucional,trece,13,zoom,City,uno,locacion,carro,peter,personal,apoyo,tv">

{% endblock %}
{% block container %}
          <section>
      	<div class="container">
      		<div class="agenciasf">
      			<h2>Agencias que usan <span>Fikner</span></h2>
      			<p>
					Al registrarse podrá formar parte de las agencias mencionadas a continuación. Si tiene una agencia y no aparece en este directorio. Regístrela de manera gratuita
					<a href="{{ path('fos_user_registration_register') }}">aquí</a>.</p>
				<h4>En nuestro directorio encontrara las siguientes agencias.
					</h4>
      			{% for entity in entities %}
                        <div class="row">
      				<div class="form-group">
	      				<div class="col-lg-2">
	      					<div class="text-center">
	      						<a href="{{path('Agencia_page',{'nombre':entity.idAgencia.nombre_agencia|replace({' ':'_'})})}}">
                                                            {% if entity.idPhoto.image == '' %}
                                                                <img data-src="{{ asset('upload/default/default.jpg')}}"  src="{{ asset('upload/default/default.jpg')}}" class="img-agencia"> 
                                                            {% else %}
                                                                <img data-src="{{web_image('upload/Photos/' ~ entity.idPhoto.id ~'/' ~ entity.idPhoto.image).resize(450,450)}}"  src="{{web_image('upload/Photos/' ~ entity.idPhoto.id ~'/' ~ entity.idPhoto.image).resize(450,540)}}" class="img-agencia" > 
                                                            {%endif%}
                                                        </a>	
	      					</div>
	      				</div>
		      			<div class="col-lg-10 bloque-agencia">
		      				<h4>{{ entity.idAgencia.nombre_agencia|upper }}</h4>
		      				<p>{{ entity.idAgencia.descripcion|slice(0, 350) ~ '...'  }}</p>
		      				<a href="{{path('Agencia_page',{'nombre':entity.idAgencia.nombre_agencia|replace({' ':'_'})})}}">leer mas</a>
		      			</div>	
      				</div>
      			</div>
      			{% endfor %}
      		</div>
      	</div>
      </section>
{%endblock%}
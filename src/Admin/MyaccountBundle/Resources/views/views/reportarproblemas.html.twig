{% extends "AdminMyaccountBundle::layout.html.twig" %}
{% block container %}
    <div class="row">
        <div class="col-lg-12">
            <form action="{{path('Myaccount_enviarproblema')}}">
            <div class="page-header"><h1>Enviar Mensaje</h1></div>
            <div class="form-group">
                <input type="text" class="form-control"  placeholder="Asunto" name="asunto" required />
            </div>
            <div class="form-group">

                <textarea class="form-control" name="mensaje" rows="14" required ></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-danger"/>    
            </div>
             </form>
        </div>
    {%endblock%}
{% extends "AdminAdminBundle::layout.html.twig" %}

{% block body -%}
    <h1>Agencia list</h1>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Nomreplegal</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('dashboard_agencia_show', { 'id': entity.id }) }}">
                            {% if entity.image == '' %}
                                <img class="img-thumbnail" u=image height="100px" width="100px" src="{{ asset('upload/default/default.jpg')}}" />
                            {% else %}
                                <a href="{{ path('Myaccount_empresa_show', { 'id': entity.id}) }}" target="_blank">

                                    <img class="img-thumbnail" u=image height="100px" width="100px" src="{{web_image('upload/Empresa/' ~ entity.id ~'/' ~ entity.image).resize(310,310)}}" />
                                </a>
                            {%endif%}</a></td>
                    <td>{{ entity.nombreagencia }}</td>
                    <td>{{ entity.telefono }}</td>
                    <td>{{ entity.direccion }}</td>
                    <td>{{ entity.nomsRepLegal }}</td>
                    <td>{{ entity.apellsRepLegal }}</td>                
                    <td>{{ entity.email }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('dashboard_agencia_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('dashboard_agencia_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dashboard_agencia_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}

{% extends "AdminAgenciaBundle::layout.html.twig" %}

{% block container %}
    <div class="col-lg-12">
        <div class="row page-header"> 
            <div class="">
                <div class="col-md-6">
                    <h1><i class="glyphicon glyphicon-dashboard"></i> Agencia</h1>
                </div>
                <div class="col-md-6">
                    <h1>{{ entity.nombreagencia }} <small>{{entity.pais}}</small></h1>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="col-lg-8">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">Categoría:{{ entity.categoria }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center">
                            {%if logoId %}
                                <a href="{{path('Agencia_logoedit_show',{'id':logoId})}}"><img class="img-circle img-responsive" data-src="{{web_image('upload/Photos/' ~ logoId ~'/' ~ logoName).resize(400,400)}}" src="{{web_image('upload/Photos/' ~ logoId ~'/' ~ logoName).zoomCrop(400,400)}}"></a> 
                            {%else%}
                                <img class="img-circle img-responsive" data-src="{{web_image('images/noimage.jpg' ).resize(400,400)}}" src="{{web_image('images/noimage.jpg').zoomCrop(400,400)}}"> 
                            {%endif%}
                            {%if logoId %}
                            {%else%}
                                <br>
                                <a href="{{path('Agencia_photo_new')}}" class="btn btn-default btn-block">Subir logotipo</a>
                            {%endif%}
                            <br>
                        </div>
                        <div class=" col-md-9 col-lg-9 "> 
                            <table class="table table-responsive table-striped table-condensed table-hover dataTable no-footer">
                                <tbody>
                                    <tr>
                                        <td>Dirección:</td>
                                        <td>{{ entity.direccion }}</td>
                                    </tr>
                                    <tr>
                                        <td>Teléfono:</td>
                                        <td>{{ entity.telefono }}</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td>{{ entity.email }}</td>
                                    </tr>
                                    <tr>
                                        <td>Firma de email</td>
                                        <td>{{ entity.firmaemail }}</td>
                                    </tr>  
                                    <tr>
                                        <td>Enviar copia al email</td>
                                        <td>{%if entity.copiaemail %}Si{%else%}No{%endif%}</td>
                                    </tr>  
                                    <tr>
                                        <td>País:</td>
                                        <td>{{entity.pais}}</td>
                                    </tr>
                                    <tr>
                                        <td>Ciudad:</td>
                                        <td>{{entity.ciudad}}</td>
                                    </tr>
                                    <tr><td>Descripción:</td>
                                        <td>{{entity.descripcion}}
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>Agencia:</td>
                                        <td>{%if entity.privado %}Privada{%else%}Publica{%endif%}</td>
                                    </tr>
                                    <tr>
                                        <td>Pagina web:</td>
                                        <td>{{entity.paginaweb}}</td>
                                    </tr>
                                    <tr>
                                        <td>Link grupo Facebook:</td>
                                        <td>{{entity.grupofb}}</td>
                                    </tr>
                                    <tr>
                                        <td>Youtube:</td>
                                        <td>{{entity.youtube}}</td>
                                    </tr>
                                    <tr>
                                        <td>Twitter:</td>
                                        <td>{{entity.twitter}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a  href="{{ path('agencia_dashboard_myagencia_edit') }}" data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-default">
                        <i class="glyphicon glyphicon-edit"></i> Editar
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <h1>VIDEO PRINCIPAL</h1>
            {% if entity.VideoPrincipal %}
                <p>Vista previa</p>
                <style>
                    .video-container {
                        position: relative;
                        padding-bottom: 56.25%;
                        padding-top: 30px; height: 0; overflow: hidden;
                    }

                    .video-container iframe,
                    .video-container object,
                    .video-container embed {
                        position: absolute;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                    }
                </style>
                <div class="video-container">
                    <iframe width="853" height="480" src="https://www.youtube.com/embed/{{ entity.VideoPrincipal }}" frameborder="0" allowfullscreen>
                    </iframe>

                </div>
            {% else %}
                <p>No ha definido ningún video.</p>
            {% endif %}

    </div>
    </div>

{% endblock %}

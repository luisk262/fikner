{% extends "AdminAgenciaBundle::layout.html.twig" %}
{% block container %}
    <div class="col-lg-12">
        <div class="row page-header"> 
            <div class="">
                <div class="col-md-10">
                    <h1><i class="glyphicon glyphicon-th-list"></i> Editar Convocatoria </h1>
                </div>
                <div class="col-md-2">
                    <a href="{{ path('Agencia_dashboard_solicitud') }}" class="btn btn-block btn-default">
                        Retroceder a lista
                    </a>
                        <hr>
                    {{ form(delete_form) }}    
                </div>
            </div>
        </div>
    </div>
    {{ form_start(edit_form) }}
    {{ form_row(edit_form.nombre,{
                                       'attr': {'class':'form-control'}
                                       
                                     })}}
    {{ form_row(edit_form.observaciones,{
                                       'attr': {'class':'form-control','rows':'10'}
                                       
                                     })}}
    <div class="row">
        <h4 id="fechaNacimiento">Fecha programada de sesi√≥n</h4>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            {{ form_widget(edit_form.fechaprogramada.year,{
                                        'attr': {'class':'form-control form-group'}
                                     })
            }}      
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            {{ form_widget(edit_form.fechaprogramada.month,{
                                        'attr': {'class':'form-control form-group','id':'espacio2'}
                                     })
            }}
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">

            {{ form_widget(edit_form.fechaprogramada.day,{
                                        'attr': {'class':'form-control form-group','id':'espacio3'}
                                     })
            }}
        </div>
    </div>


    {{ form_row(edit_form.privado)}}
    <p>Si la solicitud es publica, aparecera en su fikner-page</p>
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4">
        {{ form_row(edit_form.submit, { 'label': 'Actualizar','attr': {'class':'btn btn-block btn-default form-group' }}) }}
    </div>
    <div class="col-lg-4">
    </div>
    {{ form_end(edit_form) }}
{% endblock %}
